{% extends "teachers/admin.njk" %}
{% block title %}
<title>Apresentação {{teacher.name}}</title>
{% endblock title %}

{% block styles %}
<link rel="stylesheet" href="/styles/teacher.css">
{% endblock styles %}

{% block content %}
<div class="card">
    <section class="avatar" style="background:url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Professor</h3>
        
        <div class="item">
            <div>Nome</div>
            <div>{{teacher.name}}</div>
        </div>
        <div class="item">
            <div>Idade</div>
            <div>{{teacher.age}}</div>
        </div>
        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{teacher.graduation}}</div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>
            {% if teacher.typeEducation == "aDistancia" %}
                À Distancia
            {% else %}
                Presencial
            {% endif %}
            </div>
        </div>
        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for subjects in teacher.subjects %}
                <span>{{subjects}}</span>
                {% endfor %}
                
            </div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>

    </section>
</div>
{% endblock content %}