{% extends "layout.njk" %}

{% block title %}
<title>Teachers Edit {{teacher.name}}</title>
{% endblock title %}

{% block styles %}
<link rel="stylesheet" href="/styles/teachersRegister.css">
{% endblock styles %}

{% block content %}
<div class="card">
    <section class="avatar" style="background:url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
        <form method="POST" action="/teachers?_method=PUT">
            <h3>Editar Professor</h3>
            {% include "teachers/fields.njk"%}
        
            <input type="hidden" name="id" value="{{teacher.id}}">
            
        </form>
        <form id="form-delete" action="/teachers?_method=DELETE" method="post">
                <input type="hidden" name="id" value="{{teacher.id}}">
                <button type="submit">Excluir</button>
        </form>
        
    </section>
</div>
<script src="/scripts/confirmDelete.js"></script>

{% endblock content %}