{% extends "layout.njk" %}

{% block title %}
<title>students</title>
{% endblock title %}

{% block styles %}
<link rel="stylesheet" href="/styles/student.css">
{% endblock styles %}

{% block content %}
<div class="card table-container">

    <div class="header">
        <form action="/students" method="GET">
            <input type="text" name="filter" placeholder="Nome  ou Email" value={{filter}}>
            <button type="submit"></button>
        </form>
    </div>

    <table>
        <thead>
            <tr>
                <th>Avatar</th>
                <th>Estudante</th>
                <th>Email</th>
                <th>Ano escolar</th>
                <th>Perfil</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
        <tr>
            <td style="background: url({{student.avatar_url}}) no-repeat center center / cover">
            </td>
            <td>{{student.name}}</td>
            <td>{{student.email}}</td>
            <td>{{student.scholar_year}}</td>
            <td><a href="/students/{{student.id}}">Visitar</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}
    ></div>

    <a id="register" href="/students/register">Cadastrar Novo Estudante</a>
    
    
        
</div>
{% endblock content %}